<%- include('../partials/head.ejs') %>


<main>
<h1>My Shopping List</h1>

<ul class="list-group" id="checkShoppingList">
<% for(let i = 0; i < items.item.length; i++) { %>
    <li class="list-group-item" id="<%=i%>">
        <input type="checkbox" onclick="checkOffItem('<%= i %>')">
        <%= items.quantity[i] + ' ' + items.measurement[i] + ' ' + items.item[i] %>
    </li>
<% } %>

</ul><br><br>
<a href="/list/edit">Edit List</a>
</main>

<%- include('../partials/footer.ejs') %>
</body>
</html>
