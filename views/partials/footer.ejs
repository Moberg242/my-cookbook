<script>
    const addIngredientButton = document.getElementById('addIngredient');
    const addStepButton = document.getElementById('addStep');
    const addImgButton = document.getElementById('addImage');
    const addTagButton = document.getElementById('addTag');

    let nav = 1;
    function openNav() {
        const sidebar = document.querySelector('.nav');
        const sidebarItems = document.querySelector('#sidebarItems');
        if(nav % 2 === 0) {
            sidebar.style.width = '50px';
            sidebarItems.style.visibility = 'hidden';
        } else if(nav % 2 !== 0) {
            sidebar.style.width = '150px';
            sidebarItems.style.visibility = 'visible';
        }
        nav++;
    }

    function addIngredient() {
        const container = document.getElementById('ingredients');
        const newInput = document.createElement('div');
        newInput.innerHTML = '<input class="form-control" type="text" name="ingredients" id="ingredients">';
        container.appendChild(newInput);
    }
    addIngredientButton.addEventListener('click', () => {
        const container = document.getElementById('ingredients');
        const newInput = document.createElement('div');
        newInput.innerHTML = '<input class="form-control" type="text" name="ingredients" id="ingredients">';
        container.appendChild(newInput);
    });

    addStepButton.addEventListener('click', () => {
        const container = document.getElementById('steps');
        const newInput = document.createElement('div');
        newInput.innerHTML = '<input class="form-control" type="text" name="steps" id="steps">';
        container.appendChild(newInput);
    });

    addImgButton.addEventListener('click', () => {
        const container = document.getElementById('images');
        const newInput = document.createElement('div');
        newInput.innerHTML = '<input class="form-control" type="text" name="images" id="images">';
        container.appendChild(newInput);
    });

    addTagButton.addEventListener('click', () => {
        const container = document.getElementById('tags');
        const newInput = document.createElement('div');
        newInput.innerHTML = '<input class="form-control" type="text" name="tags" id="tags">';
        container.appendChild(newInput);
    });

</script>