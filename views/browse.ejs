<%- include('./partials/head.ejs') %>
<% let cat;
    if(category === "sidesAndApps") {
        cat = "Sides and Appetizers"
    } else {
        cat = category[0].toUpperCase() + category.slice(1);
    } %>

<main>

    <h1><%= cat %></h1>

<div class="browse">
<% for(let i = 0; i < recipes.length; i++) { %>
    <div>
        <h5><a href="/book/<%= recipes[i].category %>/<%= recipes[i].id %>"><%= recipes[i].name %></a></h5>
        <img class="images" src="<%= recipes[i].images[0] %>" alt="image of <%= recipes[i].name %>">
    </div>
<% } %>
</div>
</main>

<%- include('./partials/footer.ejs') %>
</body>
</html>
